<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aad2project.ui.AccountCreationFragment" >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/accountCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="@string/account_creation_fragment" />

    <EditText
        android:id="@+id/emailCreationAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountCreation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmpasswordCreationAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="@string/create" />

    <EditText
        android:id="@+id/passwordCreationAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailCreationAccount"
        android:layout_below="@+id/emailCreationAccount"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirmpasswordCreationAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordCreationAccount"
        android:layout_below="@+id/passwordCreationAccount"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/confirm_password_hint"
        android:inputType="textPassword" />

</RelativeLayout>
